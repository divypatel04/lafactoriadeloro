# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=5000
NODE_ENV=development

# ==================================
# DATABASE
# ==================================
MONGODB_URI=mongodb://localhost:27017/lafactoria-ecommerce
# Production example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lafactoria-prod?retryWrites=true&w=majority

# ==================================
# JWT CONFIGURATION
# ==================================
# IMPORTANT: Generate a strong secret key for production
# Use: openssl rand -base64 64
# Or: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_STRING
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Password Reset Token Expiry (in minutes)
RESET_TOKEN_EXPIRE=30

# ==================================
# EMAIL CONFIGURATION
# ==================================
# Option 1: Gmail with App Password (RECOMMENDED)
# Steps to get Gmail App Password:
# 1. Go to Google Account Settings
# 2. Enable 2-Step Verification
# 3. Go to Security > 2-Step Verification > App passwords
# 4. Generate new app password
# 5. Copy the 16-character password (can include spaces, we remove them)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
# Example: EMAIL_PASSWORD=abcd efgh ijkl mnop  (spaces are automatically removed)

# Option 2: SendGrid (Recommended for Production)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Option 3: AWS SES (Enterprise)
# EMAIL_SERVICE=ses
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Email From Address
EMAIL_FROM=noreply@lafactoriadeloro.com
EMAIL_FROM_NAME=La Factoria Del Oro

# ==================================
# PAYMENT GATEWAY
# ==================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==================================
# FRONTEND URL
# ==================================
FRONTEND_URL=http://localhost:3000
# Production example (Vercel):
# FRONTEND_URL=https://lafactoriadeloro.vercel.app
# IMPORTANT: DO NOT include trailing slash!

# ==================================
# FILE UPLOAD CONFIGURATION
# ==================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# ==================================
# SECURITY CONFIGURATION
# ==================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION

# CORS Origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3000

# ==================================
# EXTERNAL SERVICES (Optional)
# ==================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn

# Redis (for caching)
# REDIS_URL=redis://localhost:6379

# ==================================
# BUSINESS CONFIGURATION
# ==================================
# Default tax rate (percentage)
TAX_RATE=8

# Default currency
CURRENCY_CODE=USD
CURRENCY_SYMBOL=$

# Business Contact
BUSINESS_EMAIL=contact@lafactoriadeloro.com
BUSINESS_PHONE=+1-xxx-xxx-xxxx

# ==================================
# DEVELOPMENT/DEBUG
# ==================================
DEBUG=false
LOG_LEVEL=info
